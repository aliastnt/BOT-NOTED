# Timeframe
INTERVAL_FAST=1h
INTERVAL_SLOW=4h
LIMIT=300

# CoinGecko enrich
USE_COINGECKO=true
CG_MAX_MCAP_USD=50000000
CG_VS_CCY=usd
CG_PER_PAGE=250
CG_PAGES=4
CG_CACHE_MIN=10

# Fallback proxy (nếu CG không match)
MAX_24H_QUOTE_VOL=5000000
MIN_PRICE=0.0000001
EXCLUDE_CONTAINS=UP,DOWN,3L,3S,5L,5S

# Điều kiện nhanh
RSI_MIN_FAST=50
ADX_MIN_FAST=20
VOL_MULTIPLIER=2.0
NEEDED_OK_FAST=3

# Xác nhận chậm
ADX_MIN_SLOW=18
EMA_TREND_SLOW=true
MACD_TREND_SLOW=true

# Runtime
SLEEP_SECONDS=60
CONCURRENCY=6

# Telegram
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_CHAT_ID=replace_me

# Data source
USE_FUTURES=false
